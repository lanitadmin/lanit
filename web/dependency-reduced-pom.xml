<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>extension-etalon</artifactId>
    <groupId>ru.lanit.samara.core-process-ext</groupId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>web</artifactId>
  <packaging>war</packaging>
  <name>Web application</name>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <filtering>true</filtering>
        <directory>${basedir}/src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <resource>WEB-INF/web.xml</resource>
                  <properties>
                    <jsf.refresh.period>${jsf.refresh.period}</jsf.refresh.period>
                  </properties>
                </transformer>
                <transformer>
                  <resource>WEB-INF/components.xml</resource>
                  <properties>
                    <project.version.postfix>${project.version}</project.version.postfix>
                  </properties>
                </transformer>
                <transformer>
                  <resource>WEB-INF/faces-config.xml</resource>
                  <properties>
                    <project.version.postfix>${project.version}</project.version.postfix>
                  </properties>
                </transformer>
              </transformers>
              <artifactSet>
                <includes>
                  <include>${core.groupId}:web</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>ru.lanit.samara.shade-ext</groupId>
            <artifactId>shade-ext</artifactId>
            <version>1.0.0-RELEASE</version>
          </dependency>
        </dependencies>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native2ascii-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-applet</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.lanit.samara.crypto</groupId>
                  <artifactId>crypto-applet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/public</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>copy-applet-scan</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.lanit.samara.scan</groupId>
                  <artifactId>scan-applet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/public</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>copy-applet-scan-ext</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.lanit.samara</groupId>
                  <artifactId>scan-applet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/resources</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>copy-applet-smart</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.lanit.samara.smart</groupId>
                  <artifactId>smart-applet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/public</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
          <execution>
            <id>copy-applet-smart-uec</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.axetta.cardservice</groupId>
                  <artifactId>UECardApplet</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/public</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/${project.build.finalName}/WEB-INF</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/seam</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>production</id>
      <properties>
        <filter.name>production</filter.name>
        <jsf.refresh.period>-1</jsf.refresh.period>
      </properties>
    </profile>
    <profile>
      <id>developer</id>
      <properties>
        <filter.name>developer</filter.name>
        <jsf.refresh.period>0</jsf.refresh.period>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>ru.lanit.samara.core-process-ext</groupId>
      <artifactId>ejbs</artifactId>
      <version>1.1-SNAPSHOT</version>
      <type>ejb</type>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>shark-client-api</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ws-shared</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>shark-shared</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>qr-codeEx</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ejbs</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>ru.lanit.samara.core-process</groupId>
      <artifactId>core-process-api</artifactId>
      <version>8.2.3-SNAPSHOT</version>
      <type>ejb</type>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit</artifactId>
          <groupId>junit</groupId>
        </exclusion>
        <exclusion>
          <artifactId>libphonenumber</artifactId>
          <groupId>com.googlecode.libphonenumber</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
</project>

