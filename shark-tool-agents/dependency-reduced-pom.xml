<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>extension-etalon</artifactId>
    <groupId>ru.lanit.samara.core-process-ext</groupId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>shark-tool-agents</artifactId>
  <name>Shark tool agents</name>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>${core.groupId}:shark-tool-agents</include>
                </includes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.gmaven</groupId>
        <artifactId>gmaven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>ru.lanit.samara.core-process-ext</groupId>
      <artifactId>ejbs</artifactId>
      <version>1.1-SNAPSHOT</version>
      <type>ejb</type>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>shark-client-api</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>shark-shared</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>qr-codeEx</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
        <exclusion>
          <artifactId>ejbs</artifactId>
          <groupId>ru.lanit.samara.core-process</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.jboss.logging</groupId>
      <artifactId>jboss-logging</artifactId>
      <version>3.1.4.GA</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.freemarker</groupId>
      <artifactId>freemarker</artifactId>
      <version>2.3.14</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>ru.lanit.samara.core-process</groupId>
      <artifactId>ws-shared</artifactId>
      <version>8.2.3-SNAPSHOT</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>hibernate-jpa-2.1-api</artifactId>
          <groupId>org.hibernate.javax.persistence</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>1.8.3</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-logging</artifactId>
          <groupId>commons-logging</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.enhydra.shark</groupId>
      <artifactId>sharktoolagent-standard</artifactId>
      <version>3.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.enhydra.shark</groupId>
      <artifactId>sharkcommonapi</artifactId>
      <version>3.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.enhydra.shark</groupId>
      <artifactId>sharkclientapi</artifactId>
      <version>3.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.enhydra.shark</groupId>
      <artifactId>sharkclientutilities-misc</artifactId>
      <version>3.3.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.enhydra.shark</groupId>
      <artifactId>sharkinternalapi</artifactId>
      <version>3.3.1</version>
